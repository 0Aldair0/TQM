  <script>
    // Part칤culas de coraz칩n
    const canvas = document.getElementById('corazonCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    let particles = [];
    function HeartParticle() {
      this.t = 0;
      this.radius = 4 + Math.random() * 2;
      this.color = Math.random() > 0.5 ? 'red' : 'cyan';
      this.x = 0;
      this.y = 0;
      this.update = function () {
        let t = this.t;
        this.x = 16 * Math.pow(Math.sin(t), 3);
        this.y = -(13 * Math.cos(t) - 5 * Math.cos(2 * t) -
                   2 * Math.cos(3 * t) - Math.cos(4 * t));
        this.x *= 10;
        this.y *= 10;
        this.t += 0.05;
      };
      this.draw = function () {
        ctx.beginPath();
        ctx.arc(canvas.width / 2 + this.x, canvas.height / 2 + this.y, this.radius, 0, Math.PI * 2);
        ctx.fillStyle = this.color;
        ctx.fill();
      };
    }

    for (let i = 0; i < 100; i++) {
      let p = new HeartParticle();
      p.t = Math.random() * Math.PI * 2;
      particles.push(p);
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      particles.forEach(p => {
        p.update();
        p.draw();
      });
      requestAnimationFrame(animate);
    }
    animate();

    // Verificar contrase침a
    function verificar() {
      const pass = document.getElementById("pass").value.toLowerCase().trim();
      if (pass === "camila") {
        document.getElementById("inicio").classList.add("hidden");
        document.getElementById("segundaParte").classList.remove("hidden");
        document.getElementById("mensajeFinal").style.top = "10%";
        florecer();
        explosionCorazones();
        document.getElementById("musica").play();
      } else {
        alert("Nombre incorrecto 游눖");
      }
    }

    // Flores moradas que crecen
    function florecer() {
      for (let i = 0; i < 15; i++) {
        const flor = document.createElement("div");
        flor.classList.add("flor");
        flor.style.left = Math.random() * window.innerWidth + "px";
        flor.style.top = Math.random() * window.innerHeight + "px";
        document.body.appendChild(flor);
      }
    }

    // Explosi칩n de corazones
    function explosionCorazones() {
      for (let i = 0; i < 100; i++) {
        const div = document.createElement("div");
        div.style.position = "absolute";
        div.style.left = Math.random() * window.innerWidth + "px";
        div.style.top = Math.random() * window.innerHeight + "px";
        div.innerHTML = "游눘";
        div.style.fontSize = (Math.random() * 20 + 20) + "px";
        div.style.animation = "subir 4s ease forwards";
        document.body.appendChild(div);
      }
    }

    // Animaci칩n de corazones
    const style = document.createElement("style");
    style.textContent = `
      @keyframes subir {
        0% { opacity: 1; transform: translateY(0); }
        100% { opacity: 0; transform: translateY(-200px); }
      }
    `;
    document.head.appendChild(style);
  </script>
